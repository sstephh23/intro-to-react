       <script type="text/babel">
       class Message extends React.Component {
        constructor(props){
           super(props);
           this.state = {
             date: '2/28/19'
           }
         }
         render() {
           return (
             <div>
             <h1> Use code: {this.props.code}! For 30% off your next purchase at Macy's</h1>
             <h6>Valid Through: {this.state.date}</h6>
             </div>
           );
         }
       }
